<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Ui.VendorOrderlist">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll"
        android:weightSum="1"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:id="@+id/toolbar"
            android:elevation="4dp"
            android:background="@color/red"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1"
                android:orientation="horizontal">

              <!--  <ImageView
                    android:id="@+id/back_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    android:padding="2dp"
                    android:layout_gravity="center"
                    android:src="@drawable/backarrow" />-->

                <TextView
                    android:id="@+id/tlbar_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:layout_gravity="center|left"
                    android:gravity="center|left"
                    android:text="Order List"
                    android:layout_marginStart="30dp"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/logout_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    android:padding="2dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/logout_white" />

            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:weightSum="3">
        <LinearLayout
            android:id="@+id/ll_from_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:gravity="center"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:background="@drawable/bg2"
            android:orientation="vertical">
            <EditText
                android:id="@+id/et_from_date"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:focusableInTouchMode="false"
                android:gravity="start|center_vertical"
                android:layout_gravity="center|center_vertical"
                android:background="@drawable/bg2"
                android:drawableEnd="@drawable/calender"
                android:drawablePadding="5dp"
                android:inputType="text|textFilter|textNoSuggestions"
                android:paddingRight="5dp"
                android:hint="Select From Date"
                android:paddingLeft="5dp"
                android:textSize="12sp"
                android:textColor="@color/black"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_to_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:gravity="center"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:background="@drawable/bg2"
            android:orientation="vertical">
            <EditText
                android:id="@+id/et_to_date"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:focusableInTouchMode="false"
                android:gravity="start|center_vertical"
                android:layout_gravity="center|center_vertical"
                android:background="@drawable/bg2"
                android:drawableEnd="@drawable/calender"
                android:drawablePadding="5dp"
                android:inputType="text|textFilter|textNoSuggestions"
                android:paddingRight="5dp"
                android:hint="Select To Date"
                android:paddingLeft="5dp"
                android:textSize="12sp"
                android:textColor="@color/black"/>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/get_details_btn"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="0.6"
            android:background="@drawable/bg2"
            android:backgroundTint="@color/red"
            android:layout_margin="5dp"
            android:text="OK"
            android:textAllCaps="false"
            android:textColor="@color/white"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        tools:layout_editor_absoluteX="1dp"
        tools:listitem="@layout/vendorordercustomcard"
        tools:layout_editor_absoluteY="1dp"/>

</LinearLayout>